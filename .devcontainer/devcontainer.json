{
  "name": "docker",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:0-18",
  "postCreateCommand": "make install",
  "customizations": {
    "vscode": {
      "settings": {
        "typescript.tsdk": "node_modules/typescript/lib"
      },
      "extensions": [
        "bierner.markdown-mermaid"
      ]
    }
  },
  "appPort": 8099,
  "containerEnv": {
    "DCL_DISABLE_ANALYTICS": "true",
    "SHELL": "/usr/bin/zsh"
  }
}